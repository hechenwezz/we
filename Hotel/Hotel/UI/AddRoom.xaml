<Window x:Class="Hotel.UI.AddRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Name="addRomWindow"
        Title="AddRoom" Height="300" Width="500">
    <Grid>
        <Label Content="房  号" HorizontalAlignment="Left" Margin="65,49,0,0" VerticalAlignment="Top"/>
        <Label Content="类  型" HorizontalAlignment="Left" Margin="65,103,0,0" VerticalAlignment="Top"/>
        <Label Content="房  价" HorizontalAlignment="Left" Margin="65,160,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="148,53,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="196" Name="tbRoomNumber"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="148,103,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="196" Name="tbRoomType"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="148,160,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="196" Name="tbRoomRate"/>
        <Button Content="添加" HorizontalAlignment="Left" Margin="269,220,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Background="White" BorderBrush="#FFE7DBDB"/>
        <Button Content="完成" HorizontalAlignment="Left" Margin="387,220,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" BorderBrush="#FFE7DBDB" Background="White"/>

    </Grid>
</Window>
